# 复制此文件为 .env 并填入实际值

# 后端服务端口
PORT=
# 前端服务端口
FRONTEND_PORT=
# 运行环境
NODE_ENV=
# 静默模式
SILENT_MODE=

# JWT 密钥（生产环境必须修改）
JWT_SECRET=

# Pusher 应用 ID
PUSHER_APP_ID=
# Pusher 公钥
PUSHER_KEY=
# Pusher 密钥
PUSHER_SECRET=
# Pusher 集群
PUSHER_CLUSTER=

# 数据库类型：json 或 supabase
DB_TYPE=

# Supabase 项目地址
SUPABASE_URL=
# Supabase 匿名密钥
SUPABASE_ANON_KEY=
# Supabase 服务密钥
# SUPABASE_SERVICE_KEY=

# 管理员用户名
ADMIN_USERNAME=
# 管理员密码
ADMIN_PASSWORD=

# 105 频道密码
CHANNEL105_PASSWORD=

# 是否开放注册
REGISTRATION_ENABLED=

# 允许的跨域来源
CORS_ORIGINS=

# 阻止的国家代码
BLOCKED_COUNTRIES=
# 最大文件大小（MB）
MAX_FILE_SIZE=
# IP 黑名单
IP_BLACKLIST=
# 启用指纹追踪
ENABLE_FINGERPRINT=
# 启用威胁检测
ENABLE_THREAT_DETECTION=

# DDoS 时间窗口（毫秒）
DDOS_WINDOW_MS=
# DDoS 最大请求数
DDOS_MAX_REQUESTS=
# DDoS 封禁时长（毫秒）
DDOS_BAN_DURATION=

# 限流时间窗口（毫秒）
RATE_LIMIT_WINDOW_MS=
# 限流最大请求数
RATE_LIMIT_MAX_REQUESTS=

# 登录最大尝试次数
LOGIN_MAX_ATTEMPTS=
# 登录锁定时长（毫秒）
LOGIN_LOCK_DURATION=

# 日志级别
LOG_LEVEL=
# 启用审计日志
ENABLE_AUDIT_LOG=

# 最大连接数
MAX_CONNECTIONS=
# 请求超时时间（毫秒）
REQUEST_TIMEOUT=

# 静态资源缓存时间（秒）
STATIC_CACHE_MAX_AGE=
# API 缓存时间（秒）
API_CACHE_MAX_AGE=

# 调试模式
DEBUG=
# 显示错误详情
SHOW_ERROR_DETAILS=
